    <Label fx:id="valResultat" text="0.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />

    <Button onAction="#buttonCalculer" text="Calculer" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

