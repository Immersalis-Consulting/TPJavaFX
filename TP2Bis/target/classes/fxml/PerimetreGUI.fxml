    <Label text="Largeur:" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

    <TextField fx:id="textLargeur" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

